<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ziro.todolist">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.ziro.todolist.MainActivity"/>
        <activity android:name="com.ziro.todolist.Splash">

        <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.ziro.todolist.NotificationPublisher" />

        <activity android:name="com.ziro.todolist.AddItem" />
        <activity android:name="com.ziro.todolist.EditItem" />
        <activity android:name="com.ziro.todolist.addCategory"></activity>

    </application>

</manifest>